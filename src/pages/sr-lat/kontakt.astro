<style>
    .nalozi {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    a {
        color: rgb(var(--black));
        padding: 1rem 2rem;
        border: 1px solid rgb(var(--black));
        border-radius: .5rem;
        text-decoration: none;
        flex-grow: 1;
        text-align: center;
    }


    @media (max-width: 500px) {
        .nalozi {
            gap: 0.5rem;
        }

        a {
            padding: .5rem 1rem;
        }
    }

    a:hover {
        color: rgb(var(--gray));
        border-color: rgb(var(--gray));
    }

    section {
        margin-top: 3rem;
    }

    h2 {
        margin-bottom: 1rem;
    }
</style>